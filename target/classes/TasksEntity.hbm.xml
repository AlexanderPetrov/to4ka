<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.to4ka.entities">

    <class name="com.to4ka.entities.TasksEntity" table="tasks" schema="to4ka">
        <id name="id" column="ID"/>
        <property name="description" column="DESCRIPTION"/>
        <property name="dueDate" type="timestamp" column="DUE_DATE"/>
        <property name="notifBeforeMinutes" column="NOTIF_BEFORE_MINUTES"/>
        <property name="finished" column="FINISHED"/>
    </class>
</hibernate-mapping>